<!--pages/detail/detail.wxml-->
<view class="title">{{art.title}}</view>
    <image src="{{art.poster}}" mode="widthFix"></image>
<view class="content">{{art.content}}</view>
<view class="date">{{art.add_date}}</view>
<button class="like" wx:if="{{!isadd}}"  bindtap="addlike" >点击收藏</button>
<button class="is_like" wx:else="{{!isadd}}"  bindtap="cancalLike" >已收藏</button>