/* component/close.wxss */
.contont{
    padding: 0px 5px;
}
van-cell-group view{
    display: flex;
    width: 100%;
}
.list_item{
    display: flex;
    background-color: #fff;
    border-radius: 20px;
    align-items: center;
    padding-top: 2px;
    font-size: 18px;
    justify-content:space-around;
    margin-top: 10px;
}
van-swipe-cell{
    width: 100%;
    padding: 10px;
}
.text_con{
    margin-left: 30px;
    flex-direction: column;
    justify-content: space-around;
}
.title{
    font-size: 20px;
    font-weight: 550;
}
.start{
    text-align:start;
    border-radius: 10px 10px 0px 0px;
    font-size: 16px;
    font-weight: lighter;
}
.end{
    text-align: start;
    border-radius: 0px 0px 10px 10px;
    font-size: 16px;
    font-weight: lighter;
}
.btn_con{
    height: 100%;
}
button{
    height: 100%;
    color: white;
    background-color: tomato;
    display: flex;
    align-items: center;
    margin-left: -10px;
}
