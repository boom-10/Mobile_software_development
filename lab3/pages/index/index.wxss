video{
  width: 100%;
}
.danmuArea{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 90%;
  margin: 0 auto;
}
input{
  border: 1rpx solid #87ceeb;
  border-right: none;
  margin-right: -10px;
  border-radius: 5px;
  height: 50px;
  flex: 2;
  padding-left: 5px;
}
button{
  color: white;
  background-color: #87ceeb;
  height: 52px;
  line-height: 34px!important;
  flex: 1;
}
.videoList{
  width: 100%;
  min-height: 400rpx;/*最小高度*/
}
.videoList view{
  display: flex;
  justify-content: center;
  align-items: center;
}
.videoList image{
  margin-right: 18px;
}
.videoBar{
  width: 95%;
  display: flex;
  flex-direction: row;
  border-bottom: 1rpx solid #87ceeb;
  margin: 10rpx;/*外边距*/
  color: skyblue;
}
image{
  width: 70rpx;
  height: 70rpx;
  margin: 20rpx;
}
text{
  font-size: 45rpx;
  color: black;
}